    <Compile Remove="ConsoleUI\ConsoleCommands\TaskSpecificCommands\**" />
    <Compile Remove="ConsoleUI\ConsoleCommands\UserSpecificCommands\**" />
    <EmbeddedResource Remove="ConsoleUI\ConsoleCommands\Getters\**" />
    <EmbeddedResource Remove="ConsoleUI\ConsoleCommands\MiscCommands\**" />
    <EmbeddedResource Remove="ConsoleUI\ConsoleCommands\TagParsing\**" />
    <EmbeddedResource Remove="ConsoleUI\ConsoleCommands\TaskParsing\**" />
    <EmbeddedResource Remove="ConsoleUI\ConsoleCommands\TaskSpecificCommands\**" />
    <EmbeddedResource Remove="ConsoleUI\ConsoleCommands\UserSpecificCommands\**" />
