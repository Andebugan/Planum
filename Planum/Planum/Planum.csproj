    <None Remove="ConsoleUI\ConsoleCommands\MiscCommands\**" />
    <None Remove="ConsoleUI\ConsoleCommands\TagParsing\**" />
    <None Remove="ConsoleUI\ConsoleCommands\TaskParsing\**" />
    <None Remove="ConsoleUI\ConsoleCommands\TaskSpecificCommands\**" />
    <None Remove="ConsoleUI\ConsoleCommands\UserSpecificCommands\**" />
  </ItemGroup>
  <ItemGroup>
    <None Remove=".gitignore" />
    <None Remove="C:\Users\diffu\.nuget\packages\nlog.config\4.7.15\contentFiles\any\any\NLog.config" />
    <None Remove="C:\Users\diffu\.nuget\packages\nlog.schema\5.0.0\contentFiles\any\any\NLog.xsd" />
